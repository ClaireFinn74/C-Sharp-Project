<Page x:ConnectionId='1'
    x:Class="Book_Selector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Book_Selector"
    xmlns:converters="using:Book_Selector.Converters"
    xmlns:viewModel="using:Book_Selector.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:ObjectExistsToVisible x:Key="ObjectExistsToVisible" />
    </Page.Resources>



    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!-- VisualState to be triggered when window 
                     width is >=720 effective pixels -->
                        <AdaptiveTrigger MinWindowWidth = "1440" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target = "myPanel.Orientation" Value = "Horizontal" />
                        <Setter Target = "InfoPanel.Orientation" Value = "Horizontal" />

                    </VisualState.Setters>

                </VisualState>

            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:ConnectionId='9' x:Name="myPanel"  Grid.Column="0" Orientation="Vertical">
                <ListView x:ConnectionId='10'  x:Name="MainList" 
                                                                 
                                                                                    
              MinWidth="250" Margin="5">

                    <ListView.ItemTemplate>
                        <DataTemplate                                      >
                            <TextBlock x:ConnectionId='11'                                   />
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>

        <StackPanel x:ConnectionId='2' x:Name="InfoPanel" Grid.Column="2" Orientation="Vertical"                                                                                                             >
            <TextBox x:ConnectionId='4' IsReadOnly="True"
                                                                                         
              Margin="5" />
            <TextBox x:ConnectionId='5' IsReadOnly="True"
                                                                                           
              Margin="5" />
            <TextBox x:ConnectionId='6' IsReadOnly="True"
                                                                                            
              Margin="5" />
            <TextBox x:ConnectionId='7' IsReadOnly="True" TextWrapping="Wrap" Width="500"
                                                                                                 
              Margin="5" />
            <Image x:ConnectionId='8'                                                                                Height="300" Width="300"/>
        </StackPanel>

        <Button x:ConnectionId='3' x:Name="btnGoToRandom" x:Uid="uidbtnGoToRandom" Content="Want a random Book? Click here!" Background="#33EE40BE" BorderBrush="#FF39498F" HorizontalAlignment="Left" Margin="370,600,-305,0" VerticalAlignment="Top" Height="58" Width="235"                             Grid.Column="1"/>
    </Grid>
</Page>

